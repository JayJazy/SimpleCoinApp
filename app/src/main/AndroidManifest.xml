<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".CoinApplication"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.CoinApp"
        tools:targetApi="31">
        <!-- 모든 DeepLink를 MainActivity로 받음 (Single Entry Point) -->
        <activity
            android:name=".main.MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.CoinApp"
            android:launchMode="singleTask">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            <!-- 모든 mycoinsample:// 스키마를 MainActivity로 -->
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                <data android:scheme="mycoinsample" />
            </intent-filter>
        </activity>

        <!-- 다른 Activity들은 DeepLink를 직접 받지 않음 -->
        <activity
            android:name=".search.SearchActivity"
            android:exported="false" />

        <activity
            android:name=".trade.TradingActivity"
            android:exported="false" />

        <activity
            android:name=".UnknownActivity"
            android:exported="false" />
    </application>

</manifest>